B<-matrix(c(1,4,-2,1,2,1),3,2)
B
#transpose
AT<-t(A)
AT
#union
U<-matrix(1,3,2)
U
#zero
Z<-matrix(0,3,2)
Z
#identity
I<-diag(c(1,1,1))
I
C<-cbind(A,B)
C
C<-rbind(A,B)
C











#Represent the height in cm information of a team of 12 basketball players as a matrix of dimension 4x3 in row major form
D = matrix(c(23,34,54,23,56,21,56,32,76,32,74,145),4,3,byrow=TRUE)
D
#Access the height at row 3 and column 2
D[3,2]
#Display all the heights at row 2
D[2,]
#Display all the heights in column 3
D[,3]
#Extract the height in all rows but only in column1 and 3
D[,c(1,3)]
#Find the transpose of the matrix
DT<-t(D)
DT
#Four more players got added to the team.Update the matrix to reflect the heights of the player
D_4=c(23,56,32,44)
nd=cbind(D,D_4)
nd
#Find the rowwise sum and columnwise sum
ndr=rsum(D)
ndr
#Trace of matrix
trace=sum(diag(nd))
print(trace)



